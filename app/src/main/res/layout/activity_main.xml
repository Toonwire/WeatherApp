<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    android:background="#1e8bc3"
    android:orientation="vertical" >

    <!-- top layout, containing time and settings button (i) -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentCenter="true"
        android:layout_alignParentLeft="true"
        android:background="#80000000">             <!-- #AARRGGBB -->

        <TextView
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:text="20:22"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="8dp"/>

        <Button
            android:id="@+id/settings_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="i"
            android:textColor="#FFFFFF"
            android:background="@drawable/roundButton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentCenter="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15/06/2015"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/main_weather_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color="#FFFFFF"
            android:src="@drawable/sun"
            android:scaleType="fitXY"
            android:layout_marginTop="81dp"
            android:layout_below="@+id/date_text"
            android:layout_alignLeft="@+id/city_name"
            android:layout_alignStart="@+id/city_name" />

        <TextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HelsingÃ¸r"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <GridLayout
            android:id="@+id/data_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:columnCount="4"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <!-- Temperature -->
            <TextView
                android:id="@+id/data_view_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:textSize="25dp"
                android:text="20\u00B0C"
                android:textColor="#FFFFFF" />

            <!-- Rain -->
            <ImageView
                android:id="@+id/data_view_rain_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wind" />

            <!-- Wind and wind direction -->
            <TextView
                android:id="@+id/data_view_wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="4.3 m/s"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/data_view_temperature"
                android:layout_marginLeft="30dp"/>

            <!-- Sunrise -->
            <TextView
                android:id="@+id/data_view_sunrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="04:12"
                android:textColor="#FFFFFF"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/data_view_wind"
                android:layout_marginLeft="30dp"/>

            <!-- Sunset -->
            <TextView
                android:id="@+id/data_view_sunset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="22:01"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="15dp" />

            <!-- Rain -->
            <TextView
                android:id="@+id/data_view_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="3mm"
                android:layout_marginLeft="10dp"
                android:textColor="#FFFFFF"/>

            <!-- Pressure -->
            <TextView
                android:id="@+id/data_view_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="1022 hPa"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp" />

            <!-- Humidity -->
            <TextView
                android:id="@+id/data_view_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="62%"
                android:textColor="#FFFFFF"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="30dp" />
        </GridLayout>
    </RelativeLayout>
</LinearLayout>
