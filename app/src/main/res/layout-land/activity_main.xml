<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e8bc3"
    android:id="@+id/five_day_forecast"
    android:weightSum="10">


    <Button
        android:id="@+id/settings_button"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/settings_button_i"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_button"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_gravity="right"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:text="@string/location_name"
        android:id="@+id/textView"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="8"
        android:weightSum="5"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:showDividers="beginning|end">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/day_day1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/date_day1"
                />
            <ImageView
                android:id="@+id/weather_day1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#FFFFFF"
                android:src="@drawable/sun"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/deg_day1"
                />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                >
                <ImageView
                    android:id="@+id/wind_flag_day1"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind"
                    android:layout_gravity="center"
                    android:layout_rowSpan="2"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/wind_direction_day1"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind_direction"
                    android:layout_gravity="center"
                    android:layout_width="27dp"
                    android:layout_height="37dp"
                    android:rotation="45"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="@string/wind_speed_day1"
                    />
            </GridLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/day_day2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/date_day2"
                />
            <ImageView
                android:id="@+id/weather_day2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#FFFFFF"
                android:src="@drawable/few_clouds_day"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/deg_day2"
                />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                >
                <ImageView
                    android:id="@+id/wind_flag_day2"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind"
                    android:layout_gravity="center"
                    android:layout_rowSpan="2"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/wind_direction_day2"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind_direction"
                    android:layout_gravity="center"

                    android:layout_width="27dp"
                    android:layout_height="37dp"
                    android:rotation="90"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="@string/wind_speed_day2"
                    />
            </GridLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/day_day3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/date_day3"
                />
            <ImageView
                android:id="@+id/weather_day3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#FFFFFF"
                android:src="@drawable/rain"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/deg_day3"
                />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                >
                <ImageView
                    android:id="@+id/wind_flag_day3"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind"
                    android:layout_gravity="center"
                    android:layout_rowSpan="2"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/wind_direction_day3"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind_direction"
                    android:layout_gravity="center"
                    android:layout_width="27dp"
                    android:layout_height="37dp"
                    android:rotation="45"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="@string/wind_speed_day3"
                    />
            </GridLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/day_day4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/date_day4"
                />
            <ImageView
                android:id="@+id/weather_day4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#FFFFFF"
                android:src="@drawable/sun"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/deg_day4"
                />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                >
                <ImageView
                    android:id="@+id/wind_flag_day4"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind"
                    android:layout_gravity="center"
                    android:layout_rowSpan="2"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/wind_direction_day4"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind_direction"
                    android:layout_gravity="center"
                    android:layout_width="27dp"
                    android:layout_height="37dp"
                    android:rotation="45"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="@string/wind_speed_day4"
                    />
            </GridLayout>
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/day_day5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/date_day5"
                />
            <ImageView
                android:id="@+id/weather_day5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#FFFFFF"
                android:src="@drawable/sun"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="@string/deg_day5"
                />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="2"
                android:columnCount="2"
                >
                <ImageView
                    android:id="@+id/wind_flag_day5"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind"
                    android:layout_gravity="center"
                    android:layout_rowSpan="2"
                    android:paddingLeft="5dp"
                    />
                <ImageView
                    android:id="@+id/wind_direction_day5"
                    android:color="#FFFFFF"
                    android:src="@drawable/wind_direction"
                    android:layout_gravity="center"
                    android:layout_width="27dp"
                    android:layout_height="37dp"
                    android:rotation="0"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:text="@string/wind_speed_day5"
                    />
            </GridLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>